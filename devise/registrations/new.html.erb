    
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h1 class="text-center" >Register</h1>
    </div>
    <div class="modal-body">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), 
     :html => {:class => 'form col-md-12 center-block'} ) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: "form-control input-lg", placeholder: "Password" %>
        </div>
        <div class="form-group">
          <%= f.submit "Register", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
    <div class="modal-footer" style="border-top:none" >
      <div class="col-md-12">
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>