<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h1 class="text-center">Log in</h1>
    </div>
    <div class="modal-body">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form col-md-12 center-block'} ) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.email_field :email, class: "form-control input-lg", autofocus:true,  placeholder: "Email"%>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: "form-control input-lg",  placeholder: "Password" %>
        </div>
        <div class="form-group">
          <div class="checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
    <div class="modal-footer" style="border-top:none">
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>